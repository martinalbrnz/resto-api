{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-len": ["error", { "code": 120 }],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "eqeqeq": ["warn", "smart"],
    "no-extra-semi": "error",
    "semi": ["warn", "never"],
    "no-multiple-empty-lines": ["error"]
  }
}
